{
  "name": "polyglot-air",
  "private": true,
  "version": "1.0.0",
  "description": "A universal AI translator powered by Ollama and triggered by a global shortcut.",
  "author": "Anderson Nascimento",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env IS_DEV=true electron .",
    "build": "vite build && electron-builder"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "nut-js": "^4.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.1",
    "electron-builder": "^24.13.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.andercoder.polyglotair",
    "productName": "Polyglot Air",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "public/icon.png",
        "to": "icon.png"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    }
  }
}